<div class="tab-contet">
    {{toFieldGroup system.schema 'trait' value=system.trait}}
    <div class="form-group">
        <div>Ranks:</div>
        <div class="flexrow" style="gap: 4px; align-items:flex-start;">
            {{#each system.ranks as | rank index |}}
                <span style="background-color: var(--color-cool-4); border-radius: 2px; padding: 4px; text-align: center;" data-action="changeSkillRank" data-index="{{index}}">
                    {{rank}}
                </span>
            {{/each}}
        </div>
    </div>
    {{toFieldGroup system.schema 'useTraitRank' value=system.useTraitRank label='Use Trait Dice'}}
    {{toFieldGroup system.schema 'isWeaponSkill' value=system.isWeaponSkill label='Is a weapon skill'}}
</div>