<div class="edo-tab-content edo-item-settings edo-lineage-settings flex-gap-l">
    <a data-action="configTraits">{{localize 'NEWEDO.Generic.Configure'}} {{localize 'NEWEDO.Generic.Trait'}}</a>

    <div class="edo-wrapper">
        <b>Core Traits:</b>
        <div class="flexrow flex-gap-s">
            {{#each system.traits.core as |trait key|}}
                {{#if (gt trait.value 0)}}
                    <div class="edo-border-wrapper">{{localize trait.label}} {{numberFormat trait.value sign=true}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="edo-wrapper">
        <b>Derived Traits:</b>
        <div class="flexrow flex-gap-s">
            {{#each system.traits.derived as |trait key|}}
                {{#if (gt trait.value 0)}}
                    <div class="edo-border-wrapper">{{localize trait.label}} {{numberFormat trait.value sign=true}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="edo-wrapper">
        <b>Derived Modifiers:</b>
        <div class="flexrow flex-gap-s">
            {{#each system.traits.derived as |trait key|}}
                {{#if (gt trait.mod 0)}}
                    <div class="edo-border-wrapper">{{localize trait.label}} {{numberFormat trait.mod sign=true decimals=2}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="edo-wrapper" data-list="cultures">
        <b>Cultures:</b>
        <div class="flexrow flex-gap-s">
            {{#each system.cultures as |item key|}}
                <div class="edo-border-wrapper" data-index="{{key}}" data-uuid="{{item.uuid}}">
                    {{#if ../isEditMode}}
                        <a data-action="delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    {{/if}}

                    <a data-action="edit">{{item.data.name}}</a>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="edo-wrapper" data-list="items">
        <b>Items:</b>
        <div class="flexrow flex-gap-s">
            {{#each system.items as |item key|}}
                <div class="edo-border-wrapper" data-index="{{key}}" data-uuid="{{item.uuid}}">
                    {{#if ../isEditMode}}
                        <a data-action="delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    {{/if}}

                    <a data-action="edit">{{item.data.name}}</a>
                </div>
            {{/each}}
        </div>
    </div>
</div>