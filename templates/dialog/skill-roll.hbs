<form class="roll-dialog-skill">
    <div class="form-group">
        <label>Trait: <b>{{trait.label}}</b></label>
        <input type="checkbox" name="useTrait" checked="true">
        <input type="text" name="trait" disabled value="{{trait.rank}}d10" />
    </div>
    <div class="form-group">
        <label>Skill:</label>
        <input type="text" name="skill" disabled value="{{formula.ranks}}" />
    </div>
    {{> "newedo.roll-options" }}
</form>