<div class="tab-content">
    <!-- Core Stats -->
    <div class="flexrow" style="text-align: center; align-items: center; gap: 2px; margin-bottom: 10px;">
        {{#each system.traits.core as | trait key |}}

            <div style="align-items: center; min-width: 30px;" data-roll-type="NEWEDO.generic.trait" data-roll-label="NEWEDO.trait.core.{{key}}" data-roll="{{trait.rank}}d10">
                <label class="resource-label flexlarge align-left" data-action="roll">{{trait.abr}}</label>
                <input style="height: 3rem; font-size: 22px; font-weight: bold;" value="{{trait.total}}" disabled type="number" />
                {{#if ../isEditMode}}
                    <input style="width: 75%; height: 1.5rem; border-radius: 0px 0px 5px 5px;" name="system.traits.core.{{key}}.value" value="{{trait.value}}" type="number" />
                {{/if}}
                <div class="trait-rank" data-action="roll">Rank {{trait.rank}}</div>
            </div>
        {{/each}}
    </div>

    <!-- Background rolls -->
    <div class="flexrow" style="text-align: center; align-items: center; gap: 2px;">
        {{#each system.background as | background key |}}
            <div style="align-items: center; min-width: 30px;" data-background="{{key}}">
                <label class="resource-label flexlarge align-left" data-action="roll" data-roll="{{background.rank}}d10" data-label="{{background.label}}">{{background.label}}</label>
                <input name="system.background.{{key}}.value" value="{{background.value}}" type="number" {{disabled ../isPlayMode}} />
                <div class="trait-rank" data-action="roll" data-roll="{{background.rank}}d10x10" data-label="{{background.label}}">Rank {{ background.rank }}</div>
            </div>
        {{/each}}
    </div>
</div>