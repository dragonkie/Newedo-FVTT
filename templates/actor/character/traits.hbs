<div class="edo-tab-content edo-tab-traits flexcol flex-gap-l">
    {{!-- Core Stats --}}
    <div class="flexrow flex-gap-m">
        {{#each system.traits.core as | trait key |}}

            <div class="trait-box align-center" data-roll-type="NEWEDO.Generic.Trait.long" data-roll-label="{{trait.label}}" data-roll="{{trait.rank}}d10">
                <label class="edo-resource-label flexlarge align-left" data-action="roll">{{trait.label}}</label>
                <input style="height: 3rem; font-size: 22px; font-weight: bold;" value="{{trait.total}}" disabled type="number" />
                {{#if ../isEditMode}}
                    <input style="width: 75%; height: 1.5rem; border-radius: 0px 0px 5px 5px;" name="system.traits.core.{{key}}.value" value="{{trait.value}}" type="number" />
                {{/if}}
                <div class="edo-trait-rank" data-action="roll">Rank {{trait.rank}}</div>
            </div>
        {{/each}}
    </div>

    {{!-- Background rolls --}}
    <div class="flexrow flex-gap-m">
        {{#each system.background as | background key |}}
            <div class="trait-box align-center" data-background="{{key}}">
                <label class="edo-resource-label flexlarge align-left" data-action="roll" data-roll="{{background.rank}}d10" data-label="{{background.label}}">{{background.label}}</label>
                <input name="system.background.{{key}}.value" value="{{background.value}}" type="number" {{disabled ../isPlayMode}} />
                <div class="edo-background-rank" data-action="roll" data-roll="{{background.rank}}d10" data-label="{{background.label}}">Rank {{ background.rank }}</div>
            </div>
        {{/each}}
    </div>

    {{!-- Additional modifiers --}}
    <div class="flexrow flex-gap-m">
        <div class="trait-box align-center">
            <label class="edo-resource-label flexlarge align-left">{{localize config.generic.rest}} {{localize "NEWEDO.Generic.Mod.abbr"}}</label>
            <input value="{{system.rest.mod}}" type="number" disabled>
            <a data-action="rest">Heal {{system.rest.total}}</a>
        </div>
        <div class="trait-box align-center">
            <label class="edo-resource-label flexlarge align-left">{{localize config.generic.lift}} {{localize "NEWEDO.Generic.Mod.abbr"}}</label>
            <input value="{{system.lift.mod}}" type="number" disabled>
            <div>Carry {{multiply system.traits.core.pow.total system.lift.mod}}kg</div>
        </div>
        <div class="trait-box align-center">
            <label class="edo-resource-label flexlarge align-left">{{localize "NEWEDO.Trait.Derived.Hp.long"}} {{localize "NEWEDO.Generic.Mod.abbr"}}</label>
            <input value="{{system.hp.mod}}" type="number" disabled>
            <div>+{{ceil (subtraction (multiply system.traits.core.hrt.total system.hp.mod) system.traits.core.hrt.total)}} Hp</div>
        </div>
    </div>

</div>